<%- include("partials/header.ejs") %>
<body id="home-body">
    <% if(locals.msg){ %>
        <p> <%= msg %>    </p>
        <%  } %>
    <form  id="home-form" action="/register" method="post">
        <input id="username-input" type="text" name="username" placeholder="Username" required autofocus>
        <input id="password-input" type="password" name="password" placeholder="Password" required>
        <button id="button" type="submit">Register</button>
    </form>

    <script>
        document.getElementById("password-input").addEventListener("keypress",(e)=>{
            if(e.key === 'Enter'){
                if(document.getElementById("username-input").value != ""){
                   document.getElementById("home-form").submit();
                }else{
                    document.getElementById("home-form").focus();
                }
            }
        })
    </script>
</body>
</html>